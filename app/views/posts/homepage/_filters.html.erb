<div class='sorters row'>
    <div class="toggles col-md-5">
        <div class='btn-group' role='group'>
            <%= link_to 'Recent Post', update_home_path(filter: 'recent'), class: 'btn filterbtn btn-default selected', remote: true%>
            <%= link_to 'Selected Post', update_home_path(filter: 'filtered'), class: 'btn filterbtn btn-default', remote: true%>
            <% if logged_in? %><%= link_to 'My Setting', edit_user_path(current_user.id), class: 'btn filterbtn btn-default' %><% end %>
        </div>
    </div>
    <div class='searcher col-md-5'>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <span class='input-group-btn'>
                <button type="button" class="btn btn-default"><%= fa_icon "search" %></button>
            </span>
        </div>
    </div>
    <div class='new-post col-md-2'>
        <% if logged_in? %><%= link_to 'New Post', new_post_path, class: 'btn btn-default' %>
        <% else %><%= link_to 'New Post', login_path, class: 'btn btn-default' %><% end %>
    </div>
</div>