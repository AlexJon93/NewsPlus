<div class="jumbotron form">
    <h1>Reset Password</h1>
    <div class="row">
        <div class='col-md-6 col-md-offset-3'>
            <%= form_with(url: password_reset_index_path, scope: :password_reset, local: true) do |f| %>
                <div class="row">
                    <%= f.label         :email, 'Email', class: 'col-md-3' %>
                    <%= f.text_field    :email, placeholder: 'enter email', class: 'col-md-9' %>
                </div>
                <div class="row">
                    <%= f.submit "Submit", class: 'col-md-9 col-md-offset-3 btn btn-primary'%>
                </div>
                <div class="row back-button">
                    <%= link_to 'Back', login_path, class: 'col-md-9 col-md-offset-3 btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
