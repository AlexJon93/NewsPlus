<div class="jumbotron form">
    <h1>Signup</h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        	<%= form_with(model: @user, local: true) do |f| %>
        	    <div class="row">
                    <%= f.label         :username, 'User', class: 'col-md-3' %>
                    <%= f.text_field    :username, placeholder: 'enter username', class: 'col-md-9' %>
                </div>
        	
        	    <div class="row">
                    <%= f.label         :email, class: 'col-md-3' %>
                    <%= f.text_field    :email, placeholder: 'enter email', class: 'col-md-9' %>
                </div>
        	
        	    <div class="row">
                    <%= f.label         :mobile, class: 'col-md-3' %>
                    <%= f.text_field    :mobile, placeholder: 'enter mobile number', class: 'col-md-9' %>
                </div>
        	
        	    <div class="row">
                    <%= f.label             :password, 'Pass', class: 'col-md-3' %>
                    <%= f.password_field    :password, placeholder: 'enter password', class: 'col-md-9' %>
                </div>
        	
        	    <div class="row">
                    <%= f.label             :password_confirmation, 'Confirm', class: 'col-md-3' %>
                    <%= f.password_field    :password_confirmation, placeholder: 'confirm password', class: 'col-md-9' %>
                </div>
        	    
        	    <div class="row">
                    <%= f.submit "Submit", class: 'col-md-9 col-md-offset-3 btn btn-primary'%>
                </div>
        	<% end %>
            <div class="row">
                <%= link_to "already a user?", login_path, class: 'col-md-offset-3' %>
            </div>
        </div>
    </div>
</div>
